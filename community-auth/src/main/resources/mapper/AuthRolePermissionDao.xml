<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.iecas.communityauth.dao.AuthRolePermissionDao">

    <resultMap type="com.iecas.communitycommon.model.auth.entity.AuthRolePermission" id="AuthRolePermissionMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="permissionId" column="permission_id" jdbcType="INTEGER"/>
        <result property="roleId" column="role_id" jdbcType="INTEGER"/>
    </resultMap>

    <!-- 批量插入 -->
    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into db_community_auth.tb_auth_role_permission(permission_idrole_id)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.permissionId}#{entity.roleId})
        </foreach>
    </insert>
    <!-- 批量插入或按主键更新 -->
    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into db_community_auth.tb_auth_role_permission(permission_idrole_id)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.permissionId}#{entity.roleId})
        </foreach>
        on duplicate key update
        permission_id = values(permission_id) role_id = values(role_id)
    </insert>

</mapper>

